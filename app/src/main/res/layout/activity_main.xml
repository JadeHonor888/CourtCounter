<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFBDBDBD"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10sp">

    <TextView
        android:id="@+id/team_name_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:textColor="@android:color/black"
        android:text="TEAM A"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/points_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:textColor="@android:color/black"
        android:text="0"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/three_points_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:onClick="threePointsA"
        android:text="+ 3 POINTS"
        app:backgroundTint="#FF9800" />

    <Button
        android:id="@+id/two_points_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="+ 2 POINTS"
        android:onClick="twoPointsA"
        app:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/free_throw_A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="FREE THROW"
        android:onClick="onePointsA"
        app:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/reset_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="RESET"
        android:onClick="resetA"
        app:backgroundTint="#FF9800"/>

</LinearLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <TextView
            android:id="@+id/team_name_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:textColor="@android:color/black"
            android:text="TEAM B"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/points_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:textColor="@android:color/black"
            android:text="0"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/three_points_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="threePointsB"
            android:text="+ 3 POINTS"
            android:textColor="@android:color/black"
            app:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/two_points_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="+ 2 POINTS"
            android:onClick="twoPointsB"
            app:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/free_throw_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="FREE THROW"
            android:onClick="onePointsB"
            app:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/reset_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="RESET"
            android:onClick="resetB"
            app:backgroundTint="#FF9800"/>

    </LinearLayout>

</LinearLayout>
